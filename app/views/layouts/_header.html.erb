<header class="sticky-top shadow-sm">
  <div class="container-fluid">
    <div class="row">
    <%= link_to root_path, class: 'navbar-brand text-center ml-3 col-md-3' do %>
      <%= image_tag 'logo.jpg', :size => '118x118', class: 'd-inline-block'%>
    <% end %>
    <nav class="navbar navbar-expand-lg navbar-light col-md-8">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <!--ナビゲーションメニュー-->
      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav ml-auto mt-3 mt-lg-0">
          <!--メンバーヘッダー-->
          <% if member_signed_in? %>
            <li class="mt-4 mr-5 font">ようこそ、<%= current_member.first_name %>さん！</li>
            <%= link_to public_mypage_path, class:'nav-link' do %>
              <li class="nav-item nav-btn font pl-4 pr-2 border-left border-secondary">マイページ</li>
            <% end %>
            <%= link_to public_items_path, class:'nav-link' do %>
              <li class="nav-item nav-btn font pl-4 pr-2 border-left border-secondary">商品一覧</li>
            <% end %>
            <%= link_to public_cart_items_path, class:'nav-link' do %>
               <li class="nav-item nav-btn font pl-4 pr-2 border-left border-secondary">カート</li>
            <% end %>
            <%= link_to destroy_member_session_path, method: :delete, class:'nav-link' do %>
              <li class="nav-item nav-btn font px-4 border-left border-right border-secondary">ログアウト</li>
            <% end %>
          <!--管理者ヘッダー-->
          <% elsif admin_signed_in? %>
            <%= link_to admin_items_path, class:'nav-link' do %>
              <li class="nav-item nav-btn font pl-4 pr-2 border-left border-secondary">商品一覧</li>
            <% end %>
            <%= link_to admin_members_path, class:'nav-link' do %>
              <li class="nav-item nav-btn font pl-4 pr-2 border-left border-secondary">会員一覧</li>
            <% end %>
            <%= link_to admin_orders_path, class:'nav-link' do %>
              <li class="nav-item nav-btn font pl-4 pr-2 border-left border-secondary">注文履歴一覧</li>
            <% end %>
            <%= link_to admin_genres_path, class:'nav-link' do %>
              <li class="nav-item nav-btn font pl-4 pr-2 border-left border-secondary">ジャンル一覧</li>
            <% end %>
            <%= link_to destroy_admin_session_path, method: :delete, class:'nav-link' do %>
              <li class="nav-item nav-btn font px-4 border-left border-right border-secondary">ログアウト</li>
            <% end %>
          <!--ログイン前ヘッダー-->
          <% else %>
            <%= link_to homes_about_path, class:'nav-link' do %>
              <li class="nav-item nav-btn font pl-4 pr-2 border-left border-secondary">About</li>
            <% end %>
            <%= link_to public_items_path, class:'nav-link' do %>
              <li class="nav-item nav-btn font pl-4 pr-2 border-left border-secondary">商品一覧</li>
            <% end %>
            <%= link_to new_member_registration_path, class:'nav-link' do %>
              <li class="nav-item nav-btn font pl-4 pr-2 border-left border-secondary">新規登録</li>
            <% end %>
            <%= link_to new_member_session_path, class:'nav-link' do %>
              <li class="nav-item nav-btn font px-4 border-left border-right border-secondary">ログイン</li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </nav>
    </div>
    <div class="text-right">
      <%= form_tag(public_search_path, method: :get, class: 'search_tab') do %>
   　　　　<!--class: 'mr-3 w-25'-->
        <%= text_field_tag (:name), '', placeholder: "商品名を入力"%>
        <i class="fas fa-search search-icon fa-flip-horizontal text-info"></i>
        <% submit_tag %>
      <% end %>
    </div>
  </div>
</header>