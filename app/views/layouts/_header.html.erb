<header>
  <div class="container">
    <nav class="navbar navbar-expand-md navbar-light">
      <!--店名-->
      <div class="header-logo">
        <%= link_to root_path, class: 'navbar-brand mt-3' do %>
          <i class="fas fa-store-alt store-icon">ながのCAKE</i>
        <% end %>
      </div>
      <!--ナビゲーションメニュー-->
      <div class="header-nav ml-auto">
        <ul class="navbar-nav">
          <!--メンバーヘッダー-->
          <% if member_signed_in? %>
            <li class="mt-4 mr-5 font">ようこそ、<%= current_member.first_name %>さん！</li>
            <%= link_to public_mypage_path, class:'nav-link' do %>
              <li class="nav-item btn btn-light mr-3 text">マイページ</li>
            <% end %>
            <%= link_to public_items_path, class:'nav-link' do %>
              <li class="nav-item btn btn-light mr-3">商品一覧</li>
            <% end %>
            <%= link_to public_cart_items_path, class:'nav-link' do %>
               <li class="nav-item btn btn-light mr-3">カート</li>
            <% end %>
            <%= link_to destroy_member_session_path, method: :delete, class:'nav-link' do %>
              <li class="nav-item btn btn-light mr-3">ログアウト</li>
            <% end %>
          <!--管理者ヘッダー-->
          <% elsif admin_signed_in? %>
            <%= link_to admin_items_path, class:'nav-link' do %>
              <li class="nav-item btn btn-light mr-3">商品一覧</li>
            <% end %>
            <%= link_to admin_members_path, class:'nav-link' do %>
              <li class="nav-item btn btn-light mr-3">会員一覧</li>
            <% end %>
            <%= link_to admin_orders_path, class:'nav-link' do %>
              <li class="nav-item btn btn-light mr-3">注文履歴一覧</li>
            <% end %>
            <%= link_to admin_genres_path, class:'nav-link' do %>
              <li class="nav-item btn btn-light mr-3">ジャンル一覧</li>
            <% end %>
            <%= link_to destroy_admin_session_path, method: :delete, class:'nav-link' do %>
              <li class="nav-item btn btn-light mr-3">ログアウト</li>
            <% end %>
          <!--ログイン前ヘッダー-->
          <% else %>
            <%= link_to homes_about_path, class:'nav-link' do %>
              <li class="nav-item btn btn-light mr-3">About</li>
            <% end %>
            <%= link_to public_items_path, class:'nav-link' do %>
              <li class="nav-item btn btn-light mr-3">商品一覧</li>
            <% end %>
            <%= link_to new_member_registration_path, class:'nav-link' do %>
              <li class="nav-item btn btn-light mr-3">新規登録</li>
            <% end %>
            <%= link_to new_member_session_path, class:'nav-link' do %>
              <li class="nav-item btn btn-light mr-3">ログイン</li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </nav>
    <!--検索フォーム-->
    <div class="text-right">
      <%= form_with do |f| %>
        <%= f.text_field :content, :placeholder => "Search", class: 'mr-3 w-25'%>
        <i class="fas fa-search search-icon fa-flip-horizontal text-info"></i>
        <% f.submit %>
      <% end %>
     </div>
  </div>
</header>
