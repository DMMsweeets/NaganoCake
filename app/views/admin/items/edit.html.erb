 <p><%= notice %></p>

    <%= form_with model:@item, url: admin_item_path do |f| %>

    <div>
     <h2>商品編集</h2>

    <br><br><br>
      <div>
        <table>
          <tbody>
　　　　　　<tr>
              <th>商品画像</th>
              <td><%= f.attachment_field :image %></td>
            </tr>
            <tr>
              <th>商品名</th>
              <td><%= f.text_field :name %></td>
            </tr>

            <tr>
              <th>商品説明</th>
              <td><%= f.text_area :body %></td>
            </tr>

            <tr>
              <th>ジャンル</th>
              <td>          <%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></td>
            </tr>

            <tr>
              <th>税抜価格</th>
              <td>  <%= f.text_field :price %></td>
            </tr>

            <tr>
              <th>販売ステータス</th>
              <td>
                <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
                <%= f.radio_button :is_active, :false %>
                <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
              </td>
            </tr>
          </tbody>
        </table>

        <div>
        <%= f.submit "変更を保存" %>
        </div>
        </div>
        <% end %>

    </div>
  </div>
</div>

