<p><%= notice %></p>

<h1>商品新規登録画面</h1>

<%= form_with model:@item, url:admin_items_path do |f| %>

 <h4>商品画像 <%= f.attachment_field :image %></h4>
 <h4>商品名 <%= f.text_field :name %></h4>
 <h4>商品説明 <%= f.text_field :body %></h4>

 <h4>ジャンル</h4> <%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %>

 <h4>税抜価格 <%= f.text_field :price %></h4>

 <h4>販売ステータス</h4>
 <%= f.radio_button :is_active, :true %>
 <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
 <%= f.radio_button :is_active, :false %>
 <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
<br/>
 <%= f.submit "新規登録"%>
<% end %>






