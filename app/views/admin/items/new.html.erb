<div class="container my-5 h-25">
  <h2 class="font title-border pb-1">商品新規登録画面</h2>
  <%= form_with model: @item, url: admin_items_path do |f| %>
   <div class="form-group pt-3 row">
      <%= f.label :image, '商品画像', class: 'col-sm-3 col-form-label' %>
      <div class="col-sm-9 mb-2">
        <%= f.attachment_field :image, class: "form-control-file"%>
      </div>
    </div>
    <div class="form-group pt-3 row">
      <%= f.label :name, '商品名', class: 'col-sm-3 col-form-label' %>
      <div class="col-sm-9 mb-2">
        <%= f.text_field :name, class: "form-control w-25" %>
      </div>
    </div>
    <div class="form-group pt-3 row">
      <%= f.label :body, '商品説明', class: 'col-sm-3 col-form-label' %>
      <div class="col-sm-9 mb-2">
        <%= f.text_area :body, class: "form-control w-25" %>
      </div>
    </div>
    <div class="form-group pt-3 row">
      <%= f.label :genre_id, 'ジャンル', class: 'col-sm-3 col-form-label' %>
      <div class="col-sm-9 mb-2">
        <%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--", class: "form-control"%>
      </div>
    </div>
    <div class="form-group pt-3 row">
      <%= f.label :price, '税抜価格', class: 'col-sm-3 col-form-label' %>
      <div class="col-sm-9 mb-2">
        <%= f.text_field :price, class: "form-control w-25" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label '販売ステータス', class: 'col-sm-3 col-form-label' %>
      <div class="form-check">
        <%= f.radio_button :is_active, :true, class: "form-check-input" %>
        <%= f.label :is_active, "販売中", value: :true, class: "form-check-label mr-3" %>
      </div>
      <div class="form-check">
        <%= f.radio_button :is_active, :false, class: "form-check-input" %>
        <%= f.label :is_active, "販売停止中", value: :false, class: "form-check-label" %>
      </div>
    </div>
    <div class="text-center pt-3">
      <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>