<div>
  <div>
      <h2>商品詳細</h2><br>
      <%= attachment_image_tag @item, :image, :fill, 300, 300 %>
  </div>

      <br><br>
      <div>
        <table>
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.body %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <td>税込価格</td>
              <td><%= (@item.price*1.1).floor.to_s(:delimited, delimiter: ',') %>円</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
              <% if @item.is_active == true %>
              販売中
              <% else %>
              販売停止中
              <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <div>
          <%= link_to "編集する", edit_admin_item_path(@item)%>
        </div>
      </div>
    </div>