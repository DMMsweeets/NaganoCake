<div class="container my-5 height">
  <div class="title-border">
    <h2 class="font">注文一覧</h2>
  </div>
  <table class="table mt-3">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(order) %></td>
          <td><%= order.member.last_name + "　" + order.member.first_name %></td>
          <td><%= order.order_details.sum(:amount) %></td>
          <td><%= order.status %></td>
        </tr>
      <% end %>
      <%= paginate @orders %>
    </tbody>
  </table>
</div>