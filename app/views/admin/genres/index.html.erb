<div class="container my-5">
  <h2 class="font title-border pb-1">ジャンル追加・一覧画面</h2>
  <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
    <div class="form-group pt-3 row">
      <%= f.label :name, 'ジャンル名', class: 'col-sm-3 col-form-label' %>
      <%= f.text_field :name, class: "form-control w-25"%>
      <%= f.submit "新規登録",class: "btn btn-outline-primary ml-3" %>
    </div>
  <% end %>
  <div class="col-md-4 mt-5">
    <table class="table">
      <thead class="thead-light">
       <tr>
        <th>ジャンル</th>
        <th></th>
       </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
          </tr>
        <% end %>
      </tbody>
     </table>
   </div>
 </div>