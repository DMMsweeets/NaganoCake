<div class="container my-5 height">
  <h2 class="font title-border pb-1">管理者ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group pt-3 text-center row">
      <%= f.label :email, 'メールアドレス', class: 'col-sm-3 col-form-label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-25" %>
    </div>
    <div class="form-group pt-3 text-center row">
      <%= f.label :password, 'パスワード', class: 'col-sm-3 col-form-label' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control w-25" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="form-group form-check pl-5 pt-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, '次回から自動でログイン', class: "form-check-label" %>
      </div>
    <% end %>

    <div class="actions text-center">
      <%= f.submit "ログイン", class: "btn btn-outline-primary btn-lg" %>
    </div>
  <% end %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "新規登録", new_registration_path(resource_name) %><br />
  <% end %>
</div>
