<div class="container my-5 height">
<h2 class="font title-border pb-1">管理者新規登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "admin/admins/shared/error_messages", resource: resource %>

  <div class="form-group pt-3 text-center row">
    <%= f.label :email, 'メールアドレス', class: 'col-sm-3 col-form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-25" %>
  </div>

  <div class="form-group pt-3 text-center row">
    <%= f.label :password, class: 'col-sm-3 col-form-label' do %>
      パスワード
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control w-25" %>
  </div>

  <div class="form-group pt-3 text-center row">
    <%= f.label :password_confirmation, 'パスワード（確認用）', class: 'col-sm-3 col-form-label' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control w-25" %>
  </div>

  <div class="actions text-center pt-3">
    <%= f.submit "新規登録", class: "btn btn-outline-success btn-lg" %>
  </div>
<% end %>
<%- if controller_name != 'sessions' %>
  <%= link_to "管理者ログイン画面へ！", new_session_path(resource_name) %><br />
<% end %>
</div>
