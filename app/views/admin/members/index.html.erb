
<h2>会員一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @members.each do |member| %>
            <tr>
              <td><%= member.id %></td>
              <td><%= link_to member.last_name + "　"  + member.first_name,admin_member_path(member) %></td>
              <td><%= member.email %></td>
              <td>
                <% if member.is_deleted == false %>
                有効
                <% else %>
                無効
                <% end %>
              </td>
            </tr>
            <% end %>
            <%= paginate @members %>
        </tbody>
      </table>