<div class="item-genre col-sm-3">
  <table class="table table-bordered table-hover">
    <thead>
      <tr class="text-center">
        <th class="font">ジャンル検索</th>
      </tr>
    </thead>
    <tbody>
      <% genres.each do |genre|%>
        <tr>
          <td class='font'><%= link_to genre.name, public_genre_path(genre.id), class: 'text-decoration-none text-secondary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>