<div class="container my-5">
  <div class="row">
    <!--ジャンル一覧-->
    <%= render 'public/items/genre', genres: @genres %>
    <!--商品一覧-->
    <div class="item-list col-sm-9">
      <h3><strong>商品一覧(全<%= @item_counts.size%>件)</strong></h3>
      <% @items.each do |item|%>
        <div class="d-inline-block">
          <%= attachment_image_tag item, :image, :fill,200,200, format: 'jpeg', fallback: 'noimage.jpg' %>
          <p><%= link_to item.name, public_item_path(item.id), class: 'text-dark'%></p>
          <p>¥<%= (item.price).to_s(:delimited, delimiter: ',') %></p>
        </div>
      <% end %>
      <%= paginate @items %>
    </div>
  </div>
</div>