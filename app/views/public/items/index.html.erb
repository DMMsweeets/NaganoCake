<div class="container my-5 height">
  <div class="row">
    <!--ジャンル一覧-->
    <%= render 'public/items/genre', genres: @genres %>
    <!--商品一覧-->
    <div class="item-list col-sm-9">
      <h3 class="font pb-1"><strong>商品一覧(全<%= @item_counts.size%>件)</strong></h3>
      <% @items.each do |item|%>
        <div class="d-inline-block">
          <%= link_to public_item_path(item.id), class: 'text-decoration-none img-wrap' do%>
            <%= attachment_image_tag item, :image, :fill,200,200, format: 'jpeg', fallback: 'noimage.jpg', class: 'item-target' %>
            <p class="text-dark"><%= item.name %></p>
            <p class="text-dark"><%= item.genre.name %></p>
            <p class="text-dark">¥<%= (item.price).to_s(:delimited, delimiter: ',') %></p>
          <% end %>
        </div>
      <% end %>
      <%= paginate @items %>
    </div>
  </div>
</div>