<h3>注文情報確認</h3>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item|%>
    <tr>
      <td><%= attachment_image_tag cart_item.item, :image, :fill,100,100, format: 'jpeg', fallback: 'noimage.jpg' %> <%= cart_item.item.name %></td>
      <td><%= ((cart_item.item.price * 1.1).floor).to_s(:delimited, delimiter: ',')%></td>
      <td><%= cart_item.amount %></td>
      <td><%= ((cart_item.item.price * 1.1 * cart_item.amount).floor).to_s(:delimited, delimiter: ',')%></td>
    </tr>
    <% end %>
  </tbody>
</table>
<table>
  <tr>
    <th>送料</th>
    <td>800</td>
  </tr>
  <tr>
    <th>商品合計</th>
    <td><%= @total_price.floor.to_s(:delimited, delimiter: ',')%></td>
  </tr>
  <tr>
    <th>請求金額</th>
    <td><%= @tax_price.floor.to_s(:delimited, delimiter: ',') %></td>
  </tr>
</table>
<div>
  <%= form_with model: @order, url: public_orders_path, local: true do |f|%>
    <h5>支払方法</h5>
    <p><%= @order.payment %></p>
    <%= f.hidden_field :payment, value: @order.payment%>
    <h5>お届け先</h5>
    <p><%= @order.full_deliveries %></p>
    <%= f.hidden_field :name, value: @order.name%>
    <%= f.hidden_field :address, value: @order.address %>
    <%= f.hidden_field :postal_code, value: @order.postal_code %>
    <%= f.submit '注文を確定する'%>
  <% end %>
</div>