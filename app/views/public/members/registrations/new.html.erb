<div class="container my-5">
<h2 class="font title-border pb-1">新規会員登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-inline') do |f| %>
  <%= render "public/members/shared/error_messages", resource: resource %>
  <div class="form-group pt-3 row">
      <label class='col-sm-3 col-form-label'>姓</label>
      <div class="col-sm-9 mb-2">
        <%= f.text_field :last_name, autofocus: true, :placeholder => "令和", autocomplete: "last_name", class: "form-control w-25" %>
      </div>
      <label class='col-sm-3 col-form-label'>名</label>
      <div class="col-sm-9 mb-2">
        <%= f.text_field :first_name, autofocus: true, :placeholder => "道子", autocomplete: "first_name", class: "form-control w-25"  %>
      </div>
  </div>
  <div class="form-group row">
      <label class='col-sm-3 col-form-label'>セイ</label>
      <div class="col-sm-9 mb-2">
        <%= f.text_field :last_name_kana, autofocus: true, :placeholder => "レイワ", autocomplete: "last_name_kana", class: "form-control w-25"  %>
      </div>
      <label class='col-sm-3 col-form-label'>メイ</label>
      <div class="col-sm-9 mb-2">
        <%= f.text_field :first_name_kana, autofocus: true, :placeholder => "ミチコ", autocomplete: "first_name_kana", class: "form-control w-25"  %>
      </div>
  </div>
  <div class="form-group row">
    <label class='col-sm-3 col-form-label'>メールアドレス</label>
    <div class="col-sm-9 mb-2">
      <%= f.email_field :email, autofocus: true, :placeholder => "sample@exsample.com", autocomplete: "email", class: "form-control w-25"  %>
    </div>
  </div>
  <div class="form-group row">
    <label class='col-sm-3 col-form-label'>郵便番号（ハイフンなし）</label>
    <div class="col-sm-9 mb-2">
      <%= f.text_field :postal_code, autofocus: true, :placeholder => "0000000", autocomplete: "postal_code", class: "form-control w-25"  %>
    </div>
  </div>
  <div class="form-group row">
      <label class='col-sm-3 col-form-label'>住所</label>
      <div class="col-sm-9 mb-2">
        <%= f.text_field :address, autofocus: true, :placeholder => "東京都渋谷区代々木神園町0-0", autocomplete: "address", class: "form-control w-50"  %>
      </div>
  </div>
  <div class="form-group row">
      <label class='col-sm-3 col-form-label'>電話番号</label>
      <div class="col-sm-9 mb-2">
        <%= f.text_field :phone_number, :placeholder => "00000000000", autofocus: true, autocomplete: "phone", class: "form-control w-25"  %>
      </div>
  </div>
  <div class="form-group row">
    <label class='col-sm-3 col-form-label'>
      パスワード
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
    </label>
    <div class="col-sm-9 mb-2">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control w-25"  %>
    </div>
  </div>
  <div class="form-group row">
    <label class='col-sm-3 col-form-label'>パスワード（確認用）</label>
    <div class="col-sm-9 mb-2">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control w-25"  %>
    </div>
  </div>
  <div class="actions text-center pt-3">
    <%= f.submit "新規登録", class: "btn btn-outline-success btn-lg" %>
  </div>
<% end %>

<h4 class="title-border mt-3 pb-2">既に登録済みの方</h4>
<p class="pl-3 pt-2"><%= link_to 'こちら', new_member_session_path %>からログイン下さい</p>
</div>
