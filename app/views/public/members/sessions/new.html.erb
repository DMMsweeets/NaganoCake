<div class="container my-5 height">
  <h2 class="font title-border pb-1">ログイン</h2>
  <h4 class="mt-4">会員の方はこちらからログイン</h4>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-inline') do |f| %>
    <div class="form-group pt-3 text-center row">
      <label class='col-sm-3 col-form-label'>メールアドレス</label>
      <%= f.email_field :email, autofocus: true, :placeholder => "sample@exsample.com", autocomplete: "email", class: "form-control w-25" %>
    </div>
    <div class="form-group pt-3 text-center row">
      <label class='col-sm-3 col-form-label'>パスワード</label>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control w-25" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="form-group form-check pl-5 pt-3">
        <%= f.check_box :remember_me, class: "form-check-input"%>
        <%= f.label :remember_me, '次回から自動でログイン', class: "form-check-label"%>
      </div>
    <% end %>
    <div class="actions text-center">
      <%= f.submit "ログイン", class: "btn btn-outline-primary btn-lg" %>
    </div>
  <% end %>
<h4 class="font title-border mt-3 pb-2">会員登録がお済みでない方</h4>
<p class="pl-3 pt-2"><%= link_to 'こちら', new_member_registration_path %>から新規登録を行なって下さい</p>
</div>

