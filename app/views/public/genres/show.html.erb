<div class="container my-5">
 <div class="row">
    <!--ジャンル一覧-->
	<%= render 'public/items/genre', genres: @genres %>
    <!--ジャンルで絞り込んだ商品の一覧-->
  <div class="item-list col-sm-9">
   <h2><strong><%= @genre.name %>一覧(全<%= @items.count %>件)</strong></h2>

		<% @items.each do |item| %>
			<div class="d-inline-block">
				<%= link_to public_item_path(item.id) do %>
					<%= attachment_image_tag item, :image, :fill, 200, 150, format: 'jpeg',fallback: "no_image.jpg" %>
					<p><%= item.name %></p>
					<p>¥<%= item.price.to_s(:delimited, delimiter: ',') %></p>
				<% end %>
			</div>
		<% end %>

	  <div><%= paginate @items %></div>
  </div>
 </div>
</div>


